<LinearLayout
    android:id="@+id/splashLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="15dp"
    tools:context="com.smartgateapps.saudifootball.saudi.activities.Splash">

    <ImageView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_weight="50"
        android:src="@drawable/logic_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorRed"
        android:text="@string/app_name"
        android:textColor="@color/colorRed"
        android:textSize="24dp"
        android:layout_weight="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_weight="70"
        android:orientation="vertical">

        <com.greenfrvr.rubberloader.RubberLoaderView
            android:id="@+id/loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:loaderExtraColor="#fff"
            app:loaderPrimeColor="#e4e4e4"/>

        <TextView
            android:id="@+id/loadingTxtV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Loading..."
            android:gravity="center"
            android:textColor="#fff"
            android:paddingStart="15dp"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>

